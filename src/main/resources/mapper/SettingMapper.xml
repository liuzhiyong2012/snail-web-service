<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.snail.web.modules.setting.mapper.SettingMapper">
    <update id="update">
        update setting
    </update>
    <update id="updateSetting">
        update setting set content = #{content} where id = #{id}
    </update>


    <select id="getSetting" resultType="com.snail.web.modules.setting.dto.SettingDto">
        select id,content,flag,created_time as createdTime,updated_time as updatedTime from setting where 1=1
        <if test="flag != null">
           and  flag = #{flag}
        </if>
    </select>
</mapper>
